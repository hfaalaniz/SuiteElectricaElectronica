<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
	  <!-- Para análisis matemático -->
	  <PackageReference Include="MathNet.Numerics" Version="5.0.0" />
	  <!-- Para exportar BOM a Excel -->
	  <PackageReference Include="EPPlus" Version="6.2.0" />
	  <!-- O alternativamente: -->
	  <PackageReference Include="ClosedXML" Version="0.102.0" />
	  <!-- Para gráficas (opcional, si no usas custom) -->
	  <PackageReference Include="OxyPlot.WindowsForms" Version="2.1.2" />
	  <!-- Para exportar a PDF (opcional) -->
  </ItemGroup>

</Project>